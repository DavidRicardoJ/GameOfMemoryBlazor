<h3>GameContainer</h3>

<Card ListUrlImages="@ImagesUrl" ImageDefaultCard="@ImageDefaultUrl" NumberImages="NumberOfImages"></Card>


@code {
    public List<string> ImagesUrl { get; set; }
    public string ImageDefaultUrl { get; set; }
    public int NumberOfImages { get; set; }

    ImagesGetUrl imagesGetUrl = new ImagesGetUrl();

    protected override void OnInitialized()
    {
        ImagesUrl = new List<string>();
        StartGame();
    }

    public void StartGame()
    {
        ImagesUrl = GetImagesUrl(new Level1Configuration());
        ImageDefaultUrl = imagesGetUrl.ImageDefaultGetUrl(new Level1Configuration());
        NumberOfImages = ImagesUrl.Count;
    }

    public List<string> GetImagesUrl(LevelModel level)
    {
        return imagesGetUrl.GetRandonUrl(level);
    }

}
